.events-section {
  padding: 6rem 2rem;
  background: linear-gradient(180deg, #f8faff 0%, #e8f0fe 100%);
  min-height: 100vh;
}

.events-container {
  max-width: 1400px;
  margin: 0 auto;
}

.events-header {
  text-align: center;
  margin-bottom: 3rem;
}

.section-title {
  font-size: 3rem;
  font-weight: 800;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 1rem;
}

.section-subtitle {
  font-size: 1.3rem;
  color: #64748b;
}

.search-container {
  max-width: 600px;
  margin: 0 auto 4rem;
}

.search-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.search-icon {
  position: absolute;
  left: 1.5rem;
  width: 24px;
  height: 24px;
  color: #667eea;
}

.search-input {
  width: 100%;
  padding: 1.2rem 1.5rem 1.2rem 4rem;
  font-size: 1.1rem;
  border: 2px solid #e2e8f0;
  border-radius: 50px;
  background: #fff;
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(102, 126, 234, 0.1);
}

.search-input:focus {
  outline: none;
  border-color: #667eea;
  box-shadow: 0 8px 30px rgba(102, 126, 234, 0.2);
}

.no-results {
  text-align: center;
  padding: 4rem 2rem;
  font-size: 1.3rem;
  color: #64748b;
}

.slider-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 2rem;
  margin-bottom: 3rem;
}

.slider-btn {
  background: #fff;
  border: none;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  box-shadow: 0 4px 20px rgba(102, 126, 234, 0.2);
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.slider-btn svg {
  width: 24px;
  height: 24px;
  color: #667eea;
}

.slider-btn:hover {
  transform: scale(1.1);
  box-shadow: 0 6px 30px rgba(102, 126, 234, 0.3);
}

.events-slider {
  display: flex;
  gap: 2rem;
  overflow: hidden;
  flex: 1;
  max-width: 1200px;
}

.event-card {
  flex: 0 0 calc(33.333% - 1.5rem);
  background: #fff;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(102, 126, 234, 0.15);
  transition: all 0.4s ease;
  opacity: 0.7;
  transform: scale(0.9);
}

.event-card.center {
  opacity: 1;
  transform: scale(1);
  box-shadow: 0 15px 50px rgba(102, 126, 234, 0.25);
}

.event-card:hover {
  transform: scale(1.02);
  box-shadow: 0 20px 60px rgba(102, 126, 234, 0.3);
}

.event-image-container {
  position: relative;
  height: 250px;
  overflow: hidden;
}

.event-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.event-card:hover .event-image {
  transform: scale(1.1);
}

.event-category {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 0.5rem 1.2rem;
  border-radius: 50px;
  font-size: 0.9rem;
  font-weight: 600;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
}

.event-content {
  padding: 1.5rem;
}

.event-name {
  font-size: 1.5rem;
  font-weight: 700;
  color: #1e293b;
  margin-bottom: 1rem;
}

.event-details {
  display: flex;
  flex-direction: column;
  gap: 0.7rem;
  margin-bottom: 1rem;
}

.event-info {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #64748b;
  font-size: 0.95rem;
}

.event-info .icon {
  width: 18px;
  height: 18px;
  color: #667eea;
  flex-shrink: 0;
}

.event-description {
  color: #64748b;
  font-size: 1rem;
  line-height: 1.6;
  margin-bottom: 1.5rem;
}

.register-btn {
  width: 100%;
  padding: 1rem;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 50px;
  font-size: 1.1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
}

.register-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 30px rgba(102, 126, 234, 0.4);
}

.slider-dots {
  display: flex;
  justify-content: center;
  gap: 1rem;
}

.dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: #cbd5e1;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  padding: 0;
}

.dot.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  width: 30px;
  border-radius: 6px;
}

@media (max-width: 1200px) {
  .event-card {
    flex: 0 0 calc(50% - 1rem);
  }

  .event-card:nth-child(3) {
    display: none;
  }
}

@media (max-width: 768px) {
  .events-section {
    padding: 4rem 1rem;
  }

  .section-title {
    font-size: 2.5rem;
  }

  .section-subtitle {
    font-size: 1.1rem;
  }

  .slider-btn {
    width: 40px;
    height: 40px;
  }

  .slider-btn svg {
    width: 20px;
    height: 20px;
  }

  .event-card {
    flex: 0 0 100%;
  }

  .event-card:nth-child(2),
  .event-card:nth-child(3) {
    display: none;
  }

  .event-card {
    opacity: 1;
    transform: scale(1);
  }

  .event-image-container {
    height: 200px;
  }

  .event-name {
    font-size: 1.3rem;
  }
}

@media (max-width: 480px) {
  .section-title {
    font-size: 2rem;
  }

  .search-input {
    padding: 1rem 1rem 1rem 3.5rem;
    font-size: 1rem;
  }

  .search-icon {
    left: 1rem;
    width: 20px;
    height: 20px;
  }
}
